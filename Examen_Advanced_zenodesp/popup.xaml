        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examen_Advanced_zenodesp"
        mc:Ignorable="d"
        Title="popup" Height="100" Width="250">
    <Grid>
        <StackPanel>
            <TextBlock Padding="5" TextAlignment="Center" x:Name="tbMessage"/>
            <Button x:Name="btnOk"  Content="Ok" Width="50" Padding="5" Click="btnOk_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
